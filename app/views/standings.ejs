<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Standings</title>
</head>
<body>
  <h1>Standings</h1>
  <table>
    <thead>
      <tr>
        <th>Position</th>
        <th>Team</th>
        <th>Points</th>
      </tr>
    </thead>
    <tbody>
      <% standings.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.team %></td>
          <td><%= item.points %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <% if (admin) { %>
    <form action="/standings" method="POST">
      <label for="team1">Team 1:</label>
      <input type="text" id="team1" name="team1" required>
      <br>
      <label for="team2">Team 2:</label>
      <input type="text" id="team2" name="team2" required>
      <br>
      <label for="score1">Score 1:</label>
      <input type="number" id="score1" name="score1" required>
      <br>
      <label for="score2">Score 2:</label>
      <input type="number" id="score2" name="score2" required>
      <br>
      <button type="submit">Submit Result</button>
    </form>
  <% } %>
</body>
</html>